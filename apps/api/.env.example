# Database
DATABASE_URL=postgresql://siteflow:siteflow@localhost:5432/siteflow?schema=public

# JWT Authentication
JWT_SECRET=change-me-in-production-use-long-random-string
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=change-me-in-production-use-another-long-random-string
JWT_REFRESH_EXPIRES_IN=30d

# Server
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# MinIO / S3
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=siteflow

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@siteflow.local
SMTP_FROM_NAME=SiteFlow

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug
